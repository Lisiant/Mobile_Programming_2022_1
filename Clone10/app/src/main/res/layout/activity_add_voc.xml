<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVocActivity">


    <EditText
        android:id="@+id/word_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="106dp"
        android:ems="10"
        android:hint="단어를 입력하세요"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/add_voc_meaning_tv2"
        app:layout_constraintStart_toEndOf="@+id/add_voc_word_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_voc_meaning_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="뜻"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/meaning_et"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/meaning_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="뜻을 입력하세요"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@id/word_et" />

    <TextView
        android:id="@+id/add_voc_word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:text="단어"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/word_et"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:text="추가"
        app:layout_constraintStart_toEndOf="@+id/add_voc_meaning_tv2"
        app:layout_constraintTop_toBottomOf="@+id/meaning_et" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="취소"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/meaning_et" />


</androidx.constraintlayout.widget.ConstraintLayout>